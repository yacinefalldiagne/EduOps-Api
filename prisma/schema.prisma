datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

enum Role {
    ETUDIANT
    ETUDIANT_RESPONSABLE
    ENSEIGNANT
    RESPONSABLE_DEPARTEMENT
}

model User {
    id           Int     @id @default(autoincrement())
    email        String  @unique
    username     String  @unique
    firstName    String?
    lastName     String?
    password     String?
    refreshToken String?
    role         Role
}
